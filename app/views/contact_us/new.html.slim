h1 Contact Us

- if @contact_form.errors.any?
  div#error_explanation
    h2 Sorry cowboy, check the fields below!
    ul
      - @contact_form.errors.full_messages.each do |msg|
        li = msg

= form_for(@contact_form, :url => send_mail_path) do |f|
  div.field
    = f.label(:name)
    br
    = f.text_field(:name)
  div.field
    = f.label(:email)
    br
    = f.text_field(:email)
  div.field
    = f.label(:body)
    br
    = f.text_area(:body)
  div.actions
    = f.submit('Submit')