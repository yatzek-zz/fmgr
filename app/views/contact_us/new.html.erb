<h1>Contact Us</h1>

<% if @contact_form.errors.any? %>
    <div id="error_explanation">
        <h2>Sorry cowboy, check the fields below!</h2>
        <ul>
            <% @contact_form.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>
    </div>
<% end %>

<%= form_for @contact_form, :url => send_mail_path do |f| %>
    <div class="field">
        <%= f.label :name %><br />
        <%= f.text_field :name %>
    </div>
    <div class="field">
        <%= f.label :email %><br />
        <%= f.text_field :email %>
    </div>
    <div class="field">
        <%= f.label :body %><br />
        <%= f.text_area :body %>
    </div>
    <div class="actions">
        <%= f.submit 'Submit' %>
    </div>
<% end %>